<html lang="en" dir="ltr" data-startbar="dark" data-bs-theme="light">
<%- include('common/header') %>


    <body class="d-flex flex-column min-vh-100">
        <!-- SIDEBAR START -->
        <!-- <%- include('common/sidebar') %> -->
        <!-- SIDEBAR END -->

        <div class="page-wrapper">
            <!-- Page Content-->
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="row justify-content-center">
                                <div class="row mt-1">
                                    <div class="col-lg-12">
                                        <div class="card shadow-sm">
                                            <div class="card-body">
                                                <h5 class="card-title fw-bold">Analysis Report</h5>
                                                <div style="position: relative; height: 300px; width: 100%;">
                                                    <canvas id="myChart" width="800" height="200"></canvas>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <div class="card bg-corner-img btn btn-soft-success">
                                        <div class="card-body">
                                            <div class="row d-flex justify-content-center">
                                                <div class="col-9">
                                                    <p class="text-light text-uppercase mb-0 fw-bold fs-13">Total
                                                        Clients</p>
                                                    <h4 class="mt-1 mb-0 fw-medium text-light">
                                                        <%= total_clients %>
                                                    </h4>
                                                </div>
                                            </div>
                                            <!--end row-->
                                        </div>
                                        <!--end card-body-->
                                    </div>
                                    <!--end card-->
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <div class="card bg-corner-img btn btn-soft-info">
                                        <div class="card-body">
                                            <div class="row d-flex justify-content-center">
                                                <div class="col-9">
                                                    <p class="text-light text-uppercase mb-0 fw-bold fs-13">Total
                                                        Services</p>
                                                    <h4 class="mt-1 mb-0 fw-medium text-light">
                                                        <%= total_service %>
                                                    </h4>
                                                </div>
                                            </div>
                                            <!--end row-->
                                        </div>
                                        <!--end card-body-->
                                    </div>
                                    <!--end card-->
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <div class="card bg-corner-img btn btn-soft-primary">
                                        <div class="card-body">
                                            <div class="row d-flex justify-content-center">
                                                <div class="col-9">
                                                    <p class="text-light text-uppercase mb-0 fw-bold fs-13">Total Users
                                                    </p>
                                                    <h4 class="mt-1 mb-0 fw-medium text-light">
                                                        <%= total_users %>
                                                    </h4>
                                                </div>
                                            </div>
                                            <!--end row-->
                                        </div>
                                        <!--end card-body-->
                                    </div>
                                    <!--end card-->
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <div class="card bg-corner-img btn btn-soft-warning">
                                        <div class="card-body">
                                            <div class="row d-flex justify-content-center">
                                                <div class="col-9">
                                                    <p class="text-light text-uppercase mb-0 fw-bold fs-13">Total Errors
                                                    </p>
                                                    <h4 class="mt-1 mb-0 fw-medium text-light">
                                                        <%= total_issues %>
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->
                    </div>
                    <!--end footer-->
                </div>
                <!-- end page content -->
            </div>
            <!-- end page-wrapper -->
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
                const ctx = document.getElementById('myChart').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: <%- JSON.stringify(labels) %>,
                        datasets: [{
                            label: 'Error Report',
                            data: <%- JSON.stringify(data) %>,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255,99,132,1)',
                                'rgba(54,162,235,1)',
                                'rgba(255,206,86,1)',
                                'rgba(75,192,192,1)',
                                'rgba(153,102,255,1)',
                                'rgba(255,159,64,1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: { beginAtZero: true }
                        }
                    }
                });
            </script>
    </body>

    <footer>
        <%- include('common/footer') %>
    </footer>

</html>