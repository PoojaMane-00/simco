<%- include('common/header') %>
<%- include('common/sidebar') %>
        <div class="page-wrapper">
            <div class="page-content">
                <h3 class="fw-bold text-dark mb-4">Edit Client</h3>

                <% if (successMsg.length> 0) { %>
                    <div class="alert alert-success">
                        <%= successMsg %>
                    </div>
                    <% } %>

                        <% if (errorMsg.length> 0) { %>
                            <div class="alert alert-danger">
                                <%= errorMsg %>
                            </div>
                            <% } %>

                                <form action="/update-client/<%= clientData._id %>" method="post" class="w-75 m-auto">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label>Client Name</label>
                                            <input type="text" name="client_name" class="form-control" required
                                                value="<%= clientData.client_name %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Company Name</label>
                                            <input type="text" name="company_name" class="form-control" required
                                                value="<%= clientData.company_name %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Email Address</label>
                                            <input type="email" name="email_address" class="form-control" required
                                                value="<%= clientData.email_address %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Mobile</label>
                                            <input type="text" name="mobile" class="form-control" pattern="\d{10}"
                                                maxlength="10" required
                                                title="Please enter a valid 10-digit mobile number"
                                                value="<%= clientData.mobile %>">
                                        </div>
                                        <div class="col-md-12">
                                            <label>Address</label>
                                            <textarea name="address" class="form-control" rows="2"
                                                required><%= clientData.address %></textarea>
                                        </div>
                                        <div class="col-md-12">
                                            <label>Description</label>
                                            <textarea name="description" class="form-control"
                                                rows="2"><%= clientData.description %></textarea>
                                        </div>
                                        <div class="col-md-12 text-end">
                                            <button type="submit" class="btn btn-primary">Update Client</button>
                                            <a href="/clients" class="btn grad-box">Cancel</a>
                                        </div>
                                    </div>
                                </form>

            </div>
        </div>


        <script src="/assets/js/script.js"></script>

        <%- include('common/footer') %>